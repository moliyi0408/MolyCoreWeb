@{
    ViewData["Title"] = "Stock Calculator";
}

<h2>Stock Calculator</h2>

<form asp-action="CalculateReasonablePrice" method="post">
    <div>
        <label for="dividend">預估全年總配息(元)：</label>
        <input type="number" step="0.01" id="dividend" name="dividend" required />
    </div>
    <button type="submit">計算合理股價</button>
</form>

<form asp-action="TaxCount" method="post">
    <div>
        <label for="buyAmount">買入成交金額：</label>
        <input type="number" step="0.01" id="buyAmount" name="buyAmount" required />
    </div>
    <div>
        <label for="sellAmount">賣出成交金額：</label>
        <input type="number" step="0.01" id="sellAmount" name="sellAmount" required />
    </div>
    <div>
        <label for="discount">券商手續費折扣（例如六折輸入 0.6）：</label>
        <input type="number" step="0.01" id="discount" name="discount" required />
    </div>
    <button type="submit">計算交易稅</button>
</form>

<form asp-action="CalculatePriceBookRatio" method="post">
    <div>
        <label for="price">股價：</label>
        <input type="number" step="0.01" id="price" name="price" required />
    </div>
    <div>
        <label for="bookValue">每股淨值：</label>
        <input type="number" step="0.01" id="bookValue" name="bookValue" required />
    </div>
    <button type="submit">計算股價淨值比</button>
</form>

<form asp-action="Calculate" method="post">
    <div>
        <label for="count">計算次數：</label>
        <input type="number" id="count" name="count" required />
    </div>
    <div>
        <label for="choice">功能選擇：</label>
        <select id="choice" name="choice" required>
            <option value="1">計算合理股價</option>
            <option value="2">計算交易稅</option>
            <option value="3">計算股價淨值比</option>
        </select>
    </div>
    <button type="submit">計算</button>
</form>
